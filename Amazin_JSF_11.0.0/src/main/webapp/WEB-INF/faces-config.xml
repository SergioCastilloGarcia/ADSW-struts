<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.login}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{controller.login}</from-action>
			<from-outcome>login-error</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{controller.startAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.showRegisterAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.register}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{controller.register}</from-action>
			<from-outcome>register-error</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.showBooksAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/showBooks.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{controller.showSpecialOfferAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/showSpecialOffer.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{controller.startAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.logout}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/showBooks.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.startAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.addBooksAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/addBooks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.showCartAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/showCart.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.logout}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/showSpecialOffer.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.startAction}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.logout}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/addBooks.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.addProcess}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/showCart.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.addProcess}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/addBooks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.logout}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/showCart.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.buyProcess}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.buyProcess}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/showCart.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.logout}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
